{
  "name": "Erkao",
  "scopeName": "source.erkao",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#function-decl" },
    { "include": "#class-decl" },
    { "include": "#interface-decl" },
    { "include": "#enum-decl" },
    { "include": "#module-member" },
    { "include": "#storage" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#this" },
    { "include": "#operators" },
    { "include": "#function-call" },
    { "include": "#builtins" },
    { "include": "#modules" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.erkao",
          "match": "//.*$"
        },
        {
          "name": "comment.block.erkao",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.erkao",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.erkao" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.erkao" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.erkao",
              "match": "\\\\."
            },
            {
              "name": "meta.interpolation.erkao",
              "begin": "\\$\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.definition.interpolation.begin.erkao" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.definition.interpolation.end.erkao" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        },
        {
          "name": "string.quoted.double.erkao",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.erkao" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.erkao" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.erkao",
              "match": "\\\\."
            },
            {
              "name": "meta.interpolation.erkao",
              "begin": "\\$\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.definition.interpolation.begin.erkao" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.definition.interpolation.end.erkao" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.erkao",
          "match": "\\b(?:0x[0-9a-fA-F]+|\\d+(?:\\.\\d+)?(?:[eE][+-]?\\d+)?)\\b"
        }
      ]
    },
    "function-decl": {
      "patterns": [
        {
          "name": "meta.function.erkao",
          "match": "\\b(fun)\\s+([A-Za-z_][A-Za-z0-9_]*)",
          "captures": {
            "1": { "name": "storage.type.function.erkao" },
            "2": { "name": "entity.name.function.erkao" }
          }
        }
      ]
    },
    "class-decl": {
      "patterns": [
        {
          "name": "meta.class.erkao",
          "match": "\\b(class)\\s+([A-Za-z_][A-Za-z0-9_]*)",
          "captures": {
            "1": { "name": "storage.type.class.erkao" },
            "2": { "name": "entity.name.type.class.erkao" }
          }
        }
      ]
    },
    "interface-decl": {
      "patterns": [
        {
          "name": "meta.interface.erkao",
          "match": "\\b(interface)\\s+([A-Za-z_][A-Za-z0-9_]*)",
          "captures": {
            "1": { "name": "storage.type.interface.erkao" },
            "2": { "name": "entity.name.type.interface.erkao" }
          }
        }
      ]
    },
    "enum-decl": {
      "patterns": [
        {
          "name": "meta.enum.erkao",
          "match": "\\b(enum)\\s+([A-Za-z_][A-Za-z0-9_]*)",
          "captures": {
            "1": { "name": "storage.type.enum.erkao" },
            "2": { "name": "entity.name.type.enum.erkao" }
          }
        }
      ]
    },
    "storage": {
      "patterns": [
        {
          "name": "storage.type.variable.erkao",
          "match": "\\b(?:let|const)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.erkao",
          "match": "\\b(?:if|else|while|for|foreach|switch|match|case|default|break|continue|return|import|from|as|in|export|enum|interface|implements)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.erkao",
          "match": "\\b(?:true|false)\\b"
        },
        {
          "name": "constant.language.null.erkao",
          "match": "\\bnull\\b"
        }
      ]
    },
    "this": {
      "patterns": [
        {
          "name": "variable.language.this.erkao",
          "match": "\\bthis\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.optional.erkao",
          "match": "\\?\\."
        },
        {
          "name": "keyword.operator.logical.erkao",
          "match": "\\b(?:and|or)\\b"
        },
        {
          "name": "keyword.operator.comparison.erkao",
          "match": "(?:==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.assignment.erkao",
          "match": "="
        }
      ]
    },
    "module-member": {
      "patterns": [
        {
          "name": "meta.module.access.erkao",
          "match": "\\b(fs|path|json|math|random|str|array|os|time|http|proc|env|plugin|gfx|di)\\s*\\.\\s*([A-Za-z_][A-Za-z0-9_]*)",
          "captures": {
            "1": { "name": "support.module.erkao" },
            "2": { "name": "support.function.erkao" }
          }
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "name": "meta.function-call.erkao",
          "match": "\\b(?!if\\b|else\\b|for\\b|while\\b|foreach\\b|switch\\b|match\\b|case\\b|default\\b|return\\b|fun\\b|class\\b|let\\b|const\\b|enum\\b|export\\b|import\\b|from\\b|as\\b|in\\b|interface\\b|implements\\b)([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.erkao" }
          }
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.erkao",
          "match": "\\b(?:print|clock|type|len|args|push|keys|values)\\b"
        }
      ]
    },
    "modules": {
      "patterns": [
        {
          "name": "support.module.erkao",
          "match": "\\b(?:fs|path|json|math|random|str|array|os|time|http|proc|env|plugin|gfx|di)\\b"
        }
      ]
    }
  }
}
